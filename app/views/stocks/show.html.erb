<div class="flex flex-row">
  <div>
    <%= render "layouts/sidenav" %>
  </div>
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Stock" %>

  <div>
    <div>
      <h1 class="text-4xl font-bold ml-5"><%= @stock.symbol %></h1>
      <h1 class="text-4xl font-bold ml-5"><%= @stock.account.name %></h1>
    </div>
    <div class="ml-5">
      <%= render @stock %>

      <%= link_to "Edit this stock", edit_stock_path(@stock), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= link_to "Transfer this stock", edit_transfer_stock_path(@stock), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= link_to "Back to stocks", stocks_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <div class="inline-block ml-2">
        <%= link_to "Delete Stock", delete_stock_path(@stock), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"%>
      </div>

    </div>

  </div>
</div>