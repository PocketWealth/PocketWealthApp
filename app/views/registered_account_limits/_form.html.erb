<%# locals: (type:, registered_account_limit:) %>

<%= form_with(url: "/registered_account_limits/#{registered_account_limit.id}", model: registered_account_limit, class: "contents", method: :patch) do |form| %>
  <div class="my-5">
    <%= form.label type, "#{type.sub("_"," ").upcase}", class: "font-bold" %>
    <%= form.number_field type, step: :any, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    <div class="inline">
      <%= form.submit "Save", class: "btn btn-sm btn-success mt-2" %>
    </div>
  </div>
<% end %>