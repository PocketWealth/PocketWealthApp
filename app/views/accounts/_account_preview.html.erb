<div class="card bg-base-200 w-96 shadow-xl">
  <div class="card-body">
    <h2 class="card-title"><%= account.name %></h2>
    <p>Type: <%= account.account_type %></p>
    <p>Balance: <%= account.cash %>$</p>
    <% unless account.financial_institution.blank? %>
      <p>Institution: <%= account.financial_institution %></p>
    <% end %>
    <div class="card-actions justify-end">
      <%= link_to "View Account", account_path(account.id), class: "btn btn-primary" %>
    </div>
  </div>
</div>