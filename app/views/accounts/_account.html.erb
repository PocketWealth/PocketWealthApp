<div id="<%= dom_id account %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= account.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Type:</strong>
    <%= account.type %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Transaction managed:</strong>
    <%= account.transaction_managed %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Cash:</strong>
    <%= account.cash %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= account.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Financial institution:</strong>
    <%= account.financial_institution %>
  </p>

</div>
