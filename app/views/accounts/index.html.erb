<div class="flex flex-row">
  <div>
    <%= render "layouts/sidenav" %>
  </div>
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Accounts" %>

  <div>
    <div>
      <h1 class="text-4xl font-bold ml-5">Accounts</h1>
    </div>
    <div class="flex flex-row flex-wrap gap-5 ml-5 mr-5 mt-5">
      <div class="card bg-primary w-96 shadow-xl">
        <div class="card-body flex-1">
          <h2 class="card-title">New Account</h2>
          <div class="card-actions mt-auto justify-center">
            <%= link_to "Add New Account", new_account_path, class: "btn btn-accent" %>
          </div>
        </div>
      </div>
      <% @accounts.each do |account| %>
        <%= render "account_preview", account: account %>
      <% end %>
    </div>
  </div>
</div>
