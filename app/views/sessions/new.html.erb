<% provide(:title, "Log in") %>
<div class="flex flex-col mx-auto items-center">
  <h2 class="mt-10 mb-5 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Sign In To Your Account</h2>
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session, class: "flex flex-col") do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'input input-bordered w-full max-w-xs mb-5' %>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'input input-bordered w-full max-w-xs' %>
      <%= f.label :remember_me, class: "mb-5 mt-1" do %>
        <span>Remember me on this computer</span>
        <%= f.check_box :remember_me, class: "checkbox checkbox-accent" %>
      <% end %>
      <%= f.submit "Log in", class: "btn btn-primary mb-1" %>
    <% end %>
    <p class="text-center">New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>