<div class="flex flex-row">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <%= render "layouts/sidenav" %>


  <% content_for :title, "Api keys" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Api keys</h1>
    <%= link_to "New api key", new_api_key_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="api_keys" class="min-w-full">
    <% @api_keys.each do |api_key| %>
      <%= render api_key %>
      <p>
        <%= link_to "Show this api key", api_key, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
